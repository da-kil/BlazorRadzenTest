{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    //"Domain": "{DOMAIN}.onmicrosoft.com",
    //"TenantId": "{TENANT_ID}",
    //"ClientId": "{CLIENT_ID}",
    "CallbackPath": "/signin-oidc",
    "SignedOutCallbackPath": "/signout-callback-oidc"
  },
  "DownstreamApis": {
    "CommandApi": {
      "BaseUrl": "https://localhost:7062",
      "Scopes": [ "api://{COMMAND_API_CLIENT_ID}/access_as_user" ]
    },
    "QueryApi": {
      "BaseUrl": "https://localhost:7143",
      "Scopes": [ "api://{QUERY_API_CLIENT_ID}/access_as_user" ]
    }
  }
}
