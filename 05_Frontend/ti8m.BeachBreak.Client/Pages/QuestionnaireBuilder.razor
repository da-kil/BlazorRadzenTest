	private QuestionnaireTemplate template = new();
	private bool IsEditMode => TemplateId.HasValue;

	// Permission flags
	private bool canEdit = false;
	private bool canPublish = false;
	private bool canUnpublish = false;
	private bool canActivate = false;
	private bool canDeactivate = false;
	private bool canRequestPublishing = false;
	private bool canViewAuditTrail = false;

