@using Radzen
@using Radzen.Blazor
@using ti8m.BeachBreak.Client.Models
@using ti8m.BeachBreak.Client.Models.DTOs
@using ti8m.BeachBreak.Client.Components.Questions
@using ti8m.BeachBreak.Client.Components.Shared
@using ti8m.BeachBreak.Client.Services
@using ti8m.BeachBreak.Client.Helpers
@inherits OptimizedTranslatableComponentBase
@inject DialogService DialogService
@inject NotificationService NotificationService
@inject IAuthService AuthService

<style>
    .role-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 600;
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        margin-bottom: 1rem;
    }

    .answer-editor {
        padding: 0 0.5rem;
        max-width: 100%;
        overflow-x: hidden;
    }

    /* Ensure evaluation cards fit well in dialog */
    .answer-editor .rz-card {
        margin-bottom: 0 !important;
        max-width: 100%;
        overflow: visible !important;
    }

    .answer-editor .evaluation-card {
        margin-bottom: 1rem !important;
        max-width: 100%;
        overflow: visible !important;
    }

    /* Prevent nested scrolling in child components */
    .answer-editor .evaluations-container {
        overflow: visible !important;
        max-height: none !important;
    }

    /* Ensure all radzen components inside don't create their own scrollbars */
    .answer-editor .rz-panel,
    .answer-editor .rz-panel-content,
    .answer-editor .rz-card-content {
        overflow: visible !important;
    }

    /* Common Question Item Styles - Reused from Review Mode */
    .question-item-title {
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 0.5rem;
        color: #212529;
    }

    .question-item-description {
        color: #6c757d;
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
    }
</style>

<div style="display: flex; flex-direction: column; height: 100%; min-height: 500px; max-height: 80vh; overflow: hidden;">
    <div style="flex: 0 0 auto; margin-bottom: 1rem;">
        <div class="role-indicator">
            <RadzenIcon Icon="@GetRoleIcon()" />
            @(T("dialogs.editing-role-answer").Replace("{0}", CompletionRole.ToString()))
        </div>
    </div>

    <div style="flex: 1 1 auto; overflow-y: auto; overflow-x: hidden; margin-bottom: 1rem; padding-right: 0.5rem; scrollbar-gutter: stable;">
        <div class="answer-editor">
        @if (Question.Type == QuestionType.TextQuestion)
        {
            <OptimizedTextQuestion Section="@Question"
                                  Response="@editResponse"
                                  OnResponseChanged="@HandleResponseChanged"
                                  IsReadOnly="false"
                                  HideHeader="true" />
        }
        else if (Question.Type == QuestionType.Assessment)
        {
            <OptimizedAssessmentQuestion Section="@displayQuestion"
                                        Response="@editResponse"
                                        OnResponseChanged="@HandleResponseChanged"
                                        IsReadOnly="false"
                                        HideHeader="true" />
        }
        else if (Question.Type == QuestionType.Goal)
        {
            <OptimizedGoalQuestion @ref="goalQuestionRef"
                                  Section="@Question"
                                  Response="@editResponse"
                                  OnResponseChanged="@HandleResponseChanged"
                                  IsReadOnly="false"
                                  HideHeader="true"
                                  AssignmentId="@AssignmentId"
                                  CurrentUserRole="@CurrentUserRole"
                                  AssignmentWorkflowState="@AssignmentWorkflowState" />
        }
        else
        {
            <RadzenAlert AlertStyle="AlertStyle.Warning" Variant="Variant.Flat" Shade="Shade.Lighter">
                <RadzenText TextStyle="TextStyle.Body1">
                    @T("dialogs.question-type-not-supported-editing")
                </RadzenText>
            </RadzenAlert>
        }
        </div>
    </div>

    <div style="flex: 0 0 auto; display: flex; justify-content: flex-end; gap: 1rem; padding: 1rem 0.5rem 0 0.5rem; border-top: 1px solid #e9ecef; background: white; position: sticky; bottom: 0; z-index: 10;">
        <AsyncButton Text="@T("buttons.cancel")"
                    ButtonStyle="ButtonStyle.Light"
                    Click="@Cancel"
                    Size="ButtonSize.Medium" />
        <AsyncButton Text="@T("dialogs.save-changes")"
                    ProcessingText="@T("dialogs.saving")"
                    ButtonStyle="ButtonStyle.Success"
                    Icon="save"
                    Click="@SaveChanges"
                    Size="ButtonSize.Medium" />
    </div>
</div>

@code {
    [Parameter] public QuestionSection Question { get; set; } = null!;
    [Parameter] public object? CurrentAnswer { get; set; }
    [Parameter] public CompletionRole CompletionRole { get; set; }
    [Parameter] public string SectionTitle { get; set; } = string.Empty;
    [Parameter] public Guid AssignmentId { get; set; }
    [Parameter] public ApplicationRole CurrentUserRole { get; set; } = ApplicationRole.Employee;
    [Parameter] public WorkflowState AssignmentWorkflowState { get; set; } = WorkflowState.EmployeeInProgress;
    [Parameter] public string? EvaluationKey { get; set; } // When set, only edit this specific evaluation

    private QuestionResponse editResponse = new();
    private OptimizedGoalQuestion? goalQuestionRef;
    private QuestionSection displayQuestion = null!; // Filtered question for display

    protected override void OnInitialized()
    {
        // Create the display question (filtered if editing a specific evaluation)
        displayQuestion = CreateDisplayQuestion();

        editResponse = new QuestionResponse
        {
            QuestionId = Question.Id,
            QuestionType = Question.Type,
            LastModified = DateTime.Now
        };

        // Initialize ResponseData based on question type and current answer
        if (CurrentAnswer is QuestionResponseDataDto responseData)
        {
            // Use strongly-typed ResponseData directly
            editResponse.ResponseData = responseData;
        }
        else
        {
            // Initialize empty strongly-typed ResponseData
            editResponse.ResponseData = Question.Type switch
            {
                QuestionType.TextQuestion => new TextResponseDataDto(),
                QuestionType.Assessment => new AssessmentResponseDataDto(),
                QuestionType.Goal => new GoalResponseDataDto(),
                _ => null
            };
        }
    }

    private QuestionSection CreateDisplayQuestion()
    {
        // If no specific evaluation is targeted, return the original question
        if (string.IsNullOrEmpty(EvaluationKey) || Question.Type != QuestionType.Assessment)
        {
            return Question;
        }

        // Create a filtered copy for single-evaluation editing
        var filteredQuestion = new QuestionSection
        {
            Id = Question.Id,
            TitleEnglish = Question.TitleEnglish,
            TitleGerman = Question.TitleGerman,
            DescriptionEnglish = Question.DescriptionEnglish,
            DescriptionGerman = Question.DescriptionGerman,
            Type = Question.Type,
            IsRequired = Question.IsRequired,
            Order = Question.Order,
            Configuration = Question.Configuration // Use typed configuration directly
        };

        // Filter evaluations to only the target evaluation
        if (Question.Configuration is AssessmentConfiguration assessConfig)
        {
            var targetEvaluation = assessConfig.Evaluations.FirstOrDefault(e => e.Key == EvaluationKey);

            if (targetEvaluation != null)
            {
                filteredQuestion.Configuration = new AssessmentConfiguration
                {
                    Evaluations = new List<EvaluationItem> { targetEvaluation },
                    RatingScale = assessConfig.RatingScale,
                    ScaleLowLabel = assessConfig.ScaleLowLabel,
                    ScaleHighLabel = assessConfig.ScaleHighLabel
                };
            }
        }

        return filteredQuestion;
    }

    private async Task HandleResponseChanged(QuestionResponse response)
    {
        // Update is already handled by the component
        // This is just to track changes
        await Task.CompletedTask;
    }

    private string GetRoleIcon()
    {
        return CompletionRole switch
        {
            CompletionRole.Employee => "person",
            CompletionRole.Manager => "supervisor_account",
            CompletionRole.Both => "groups",
            _ => "help"
        };
    }

    private void Cancel()
    {
        DialogService.Close(null);
    }

    private async Task SaveChanges()
    {
        // Validate required field
        if (Question.IsRequired && !IsAnswerValid())
        {
            NotificationService.Notify(NotificationSeverity.Warning, "Required Field", "This field is required and cannot be empty.");
            return;
        }

        // For goal questions during review meetings, save pending changes immediately
        if (Question.Type == QuestionType.Goal && goalQuestionRef != null && IsInReviewMeeting())
        {
            try
            {
                var goalsSaved = await goalQuestionRef.SavePendingGoalChanges();
                if (!goalsSaved)
                {
                    NotificationService.Notify(NotificationSeverity.Warning, "Partial Save",
                        "Some goal changes could not be saved. Please try again.");
                    return;
                }
            }
            catch (Exception ex)
            {
                NotificationService.Notify(NotificationSeverity.Error, "Save Failed",
                    $"Failed to save goal changes: {ex.Message}");
                return;
            }
        }

        // Build complete QuestionResponse structure (same as regular questionnaire)
        var questionResponse = new QuestionResponse
        {
            QuestionId = Question.Id,
            QuestionType = Question.Type,
            LastModified = DateTime.Now,
            ResponseData = editResponse.ResponseData
        };

        DialogService.Close(questionResponse);
    }

    private bool IsAnswerValid()
    {
        return Question.Type switch
        {
            QuestionType.TextQuestion => IsTextQuestionValid(),
            QuestionType.Assessment => IsAssessmentQuestionValid(),
            QuestionType.Goal => IsGoalQuestionValid(),
            _ => editResponse.ResponseData != null
        };
    }

    private bool IsTextQuestionValid()
    {
        if (editResponse.ResponseData is not TextResponseDataDto textData)
            return false;

        // Check if any text section has content
        return textData.TextSections.Any(section => !string.IsNullOrWhiteSpace(section));
    }

    private bool IsAssessmentQuestionValid()
    {
        if (editResponse.ResponseData is not AssessmentResponseDataDto assessmentData)
            return false;

        // Check if any evaluation has been rated
        return assessmentData.Evaluations.Any(kvp => kvp.Value.Rating > 0);
    }

    private bool IsGoalQuestionValid()
    {
        // Goal questions are considered valid if they have existing goal data
        // During review/edit phases, goals have already been validated and saved
        // The validation should be more lenient since we're editing existing data
        if (editResponse.ResponseData is not GoalResponseDataDto goalData)
            return false;

        // Check if there are goals or predecessor ratings (either indicates valid goal data)
        bool hasGoals = goalData.Goals.Any();
        bool hasPredecessorRatings = goalData.PredecessorRatings.Any();
        bool hasPredecessorAssignmentId = goalData.PredecessorAssignmentId.HasValue;

        // Goal question is valid if it has any goal-related data structure
        // This is appropriate for edit dialogs where goal data is already established
        return hasGoals || hasPredecessorRatings || hasPredecessorAssignmentId;
    }

    /// <summary>
    /// Checks if the current context is during a review meeting where changes should be saved immediately.
    /// </summary>
    private bool IsInReviewMeeting()
    {
        return AssignmentWorkflowState is WorkflowState.InReview or
                                         WorkflowState.ReviewFinished or
                                         WorkflowState.EmployeeReviewConfirmed;
    }

}
