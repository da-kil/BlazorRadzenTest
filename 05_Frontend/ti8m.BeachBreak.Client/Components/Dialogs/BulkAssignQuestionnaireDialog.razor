        if (questionnaire == null) return "0 min";

        var totalMinutes = questionnaire.EstimatedDuration * selectedEmployees.Count;
        return totalMinutes > 60 ? $"{totalMinutes / 60}h {totalMinutes % 60}m" : $"{totalMinutes} min";
    }

