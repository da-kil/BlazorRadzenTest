@using Radzen
@using Radzen.Blazor
@using ti8m.BeachBreak.Client.Components.Shared
@inject DialogService DialogService

<div class="dialog-container">
    <div class="dialog-review-info success">
        <div class="text-center">
            <RadzenIcon Icon="event_available" Class="dialog-header-icon" />
            <RadzenText TextStyle="TextStyle.H5" Class="mb-2">
                Finish Review Meeting
            </RadzenText>
            <RadzenText TextStyle="TextStyle.Body2">
                You are about to complete the review meeting. The questionnaire will move to the next phase where the employee must confirm the review outcome.
            </RadzenText>
        </div>
    </div>

    <div class="info-section">
        <div class="icon-box">
            <RadzenIcon Icon="info" Style="color: #4CAF50;" />
            <RadzenText TextStyle="TextStyle.Subtitle2" Class="fw-bold mb-0">
                What happens next?
            </RadzenText>
        </div>
        <RadzenText TextStyle="TextStyle.Body2" Class="text-muted">
            After finishing the review meeting:
        </RadzenText>
        <ul style="margin-top: 0.5rem; margin-bottom: 0;">
            <li><RadzenText TextStyle="TextStyle.Body2" Class="text-muted">All sections become read-only for both parties</RadzenText></li>
            <li><RadzenText TextStyle="TextStyle.Body2" Class="text-muted">Employee will be notified to confirm the review outcome</RadzenText></li>
            <li><RadzenText TextStyle="TextStyle.Body2" Class="text-muted">You will be able to finalize after employee confirmation</RadzenText></li>
        </ul>
    </div>

    <div class="dialog-content-section">
        <RadzenText TextStyle="TextStyle.Subtitle2" Class="fw-bold mb-2">
            Review Summary (Optional)
        </RadzenText>
        <RadzenText TextStyle="TextStyle.Body2" Class="text-muted mb-2">
            Summarize the key points discussed during the review meeting, any action items, or important observations:
        </RadzenText>
        @if (!string.IsNullOrWhiteSpace(ExistingReviewSummary))
        {
            <div class="info-section mb-2" style="background-color: #fff3cd; border-left: 4px solid #ffc107; padding: 0.75rem;">
                <div class="icon-box">
                    <RadzenIcon Icon="edit" Style="color: #ff9800;" />
                    <RadzenText TextStyle="TextStyle.Caption" Class="fw-bold mb-0" Style="color: #856404;">
                        Existing Summary Loaded
                    </RadzenText>
                </div>
                <RadzenText TextStyle="TextStyle.Caption" Style="color: #856404;">
                    You can edit or replace the previous review summary below.
                </RadzenText>
            </div>
        }
        <RadzenTextArea @bind-Value="@reviewSummary"
                       Placeholder="Enter review summary here... (optional)"
                       Rows="8"
                       Style="width: 100%;"
                       MaxLength="5000" />
        <RadzenText TextStyle="TextStyle.Caption" Class="text-muted mt-1">
            @(reviewSummary?.Length ?? 0) / 5000 characters
        </RadzenText>
    </div>

    <div class="dialog-actions">
        <AsyncButton Text="Cancel"
                    ButtonStyle="ButtonStyle.Light"
                    Click="@Cancel"
                    Size="ButtonSize.Medium" />
        <AsyncButton Text="Finish Review Meeting"
                    ProcessingText="Finishing"
                    ButtonStyle="ButtonStyle.Success"
                    Icon="event_available"
                    Click="@FinishReview"
                    Size="ButtonSize.Medium" />
    </div>
</div>

@code {
    [Parameter]
    public string? ExistingReviewSummary { get; set; }

    private string? reviewSummary;

    protected override void OnInitialized()
    {
        // Initialize with existing summary if reopening review
        reviewSummary = ExistingReviewSummary;
        base.OnInitialized();
    }

    protected override void OnParametersSet()
    {
        // Update reviewSummary when parameters are set (important for dialog parameters)
        reviewSummary = ExistingReviewSummary;
        base.OnParametersSet();
    }

    private void Cancel()
    {
        DialogService.Close(null);
    }

    private void FinishReview()
    {
        // Return the review summary (return empty string if null to distinguish from cancellation)
        DialogService.Close(reviewSummary ?? string.Empty);
    }
}
