@using Radzen.Blazor
@using ti8m.BeachBreak.Client.Models
@using ti8m.BeachBreak.Client.Models.DTOs
@using ti8m.BeachBreak.Client.Components.Shared
@using ti8m.BeachBreak.Client.Services.Enhanced
@inherits OptimizedComponentBase

@* Optimized section renderer *@
<div class="section-container" data-section-id="@Section.Id">
    @switch (Section.Type)
    {
        case QuestionType.Assessment:
            @RenderAssessmentOptimized()
            break;
        case QuestionType.TextQuestion:
            @RenderTextQuestionOptimized()
            break;
        case QuestionType.Goal:
            @RenderGoalQuestionOptimized()
            break;
        default:
            @RenderUnsupportedQuestion()
            break;
    }
</div>

@code {
    [Parameter, EditorRequired] public QuestionSection Section { get; set; } = default!;
    [Parameter, EditorRequired] public QuestionResponse Response { get; set; } = default!;
    [Parameter] public EventCallback<QuestionResponse> OnResponseChanged { get; set; }
    [Parameter] public bool IsReadOnly { get; set; } = false;
    [Parameter] public bool HideHeader { get; set; } = false;
    [Parameter] public Guid AssignmentId { get; set; }
    [Parameter] public ApplicationRole CurrentUserRole { get; set; } = ApplicationRole.Employee;
    [Parameter] public WorkflowState AssignmentWorkflowState { get; set; } = WorkflowState.EmployeeInProgress;
    [Parameter] public int GoalRefreshToken { get; set; } = 0;
    [Parameter] public SectionResponse? SectionData { get; set; } // Access to all role responses for review mode

    private bool shouldRender = true;
    private string? lastQuestionHash;
    private string? lastResponseHash;

    // Reference to child OptimizedGoalQuestion (if this is a Goal question)
    private OptimizedGoalQuestion? goalQuestionRef;

    /// <summary>
    /// Saves pending goal changes if this is a Goal section.
    /// Returns true if all operations succeed or if not a goal section.
    /// </summary>
    public async Task<bool> SavePendingGoalChanges()
    {
        if (Section.Type == QuestionType.Goal && goalQuestionRef != null)
        {
            return await goalQuestionRef.SavePendingGoalChanges();
        }
        return true; // Not a goal section, nothing to save
    }

    protected override void OnParametersSet()
    {
        // Only re-render if section or response data actually changed
        var currentSectionHash = ComputeSectionHash();
        var currentResponseHash = ComputeResponseHash();

        shouldRender = currentSectionHash != lastQuestionHash ||
                      currentResponseHash != lastResponseHash;

        if (shouldRender)
        {
            lastQuestionHash = currentSectionHash;
            lastResponseHash = currentResponseHash;
        }
    }

    protected override bool HasStateChanged()
    {
        return shouldRender;
    }

    private string ComputeSectionHash()
    {
        // Create hash based on section properties that affect rendering
        var configHash = Section.Configuration?.GetHashCode() ?? 0;
        return $"{Section.Id}|{Section.TitleEnglish}|{Section.TitleGerman}|{Section.Type}|{Section.DescriptionEnglish}|{Section.DescriptionGerman}|{configHash}";
    }

    private string ComputeResponseHash()
    {
        // Create hash based on response properties that affect rendering
        if (Response.ResponseData == null)
        {
            return $"{Response.QuestionId}|empty";
        }

        // Create hash based on strongly-typed ResponseData
        var responseDataHash = Response.ResponseData switch
        {
            TextResponseDataDto textData => $"text|{string.Join(",", textData.TextSections)}",
            AssessmentResponseDataDto assessmentData => $"assessment|{string.Join(",", assessmentData.Evaluations.Select(kvp => $"{kvp.Key}:{kvp.Value.Rating}:{kvp.Value.Comment}"))}",
            GoalResponseDataDto goalData => $"goal|{goalData.Goals.Count}|{goalData.PredecessorRatings.Count}|{goalData.PredecessorAssignmentId}|{string.Join(",", goalData.Goals.Select(g => $"{g.GoalId}:{g.ObjectiveDescription}:{g.WeightingPercentage}"))}",
            _ => Response.ResponseData.GetType().Name
        };

        return $"{Response.QuestionId}|{responseDataHash}";
    }

    // SerializeValue method removed - no longer needed with strongly-typed ResponseData

    private RenderFragment RenderAssessmentOptimized() => __builder =>
    {
        <OptimizedAssessmentQuestion Section="@Section"
                                    Response="@Response"
                                    OnResponseChanged="@OnResponseChanged"
                                    IsReadOnly="@IsReadOnly"
                                    HideHeader="@HideHeader" />
    };

    private RenderFragment RenderTextQuestionOptimized() => __builder =>
    {
        <OptimizedTextQuestion Section="@Section"
                              Response="@Response"
                              OnResponseChanged="@OnResponseChanged"
                              IsReadOnly="@IsReadOnly"
                              HideHeader="@HideHeader" />
    };

    private RenderFragment RenderGoalQuestionOptimized() => __builder =>
    {
        <OptimizedGoalQuestion @ref="goalQuestionRef"
                              Section="@Section"
                              Response="@Response"
                              OnResponseChanged="@OnResponseChanged"
                              IsReadOnly="@IsReadOnly"
                              HideHeader="@HideHeader"
                              AssignmentId="@AssignmentId"
                              CurrentUserRole="@CurrentUserRole"
                              AssignmentWorkflowState="@AssignmentWorkflowState"
                              GoalRefreshToken="@GoalRefreshToken"
                              SectionData="@SectionData" />
    };

    private RenderFragment RenderUnsupportedQuestion() => __builder =>
    {
        <div class="alert alert-warning d-flex align-items-center">
            <RadzenIcon Icon="warning" Class="me-2" />
            <span>Section type '@Section.Type' is not supported.</span>
        </div>
    };

    // Helper method to handle response changes with debouncing
    private async Task HandleResponseChanged(QuestionResponse newResponse)
    {
        Response = newResponse;

        // Debounce response changes to avoid excessive API calls
        await NotifyStateChangedDebounced(150);

        if (OnResponseChanged.HasDelegate)
        {
            await OnResponseChanged.InvokeAsync(newResponse);
        }
    }
}

<style>
.question-container {
    margin-bottom: 3rem;
}

.question-container:last-child {
    border-bottom: none;
    margin-bottom: 0;
}

/* Performance optimization: reduce reflows */
.question-container * {
    box-sizing: border-box;
}

/* Hide content during re-render to prevent flash */
.question-container[data-rendering="true"] {
    opacity: 0.7;
    pointer-events: none;
}
</style>