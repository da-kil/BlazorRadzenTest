@using Radzen.Blazor
@using ti8m.BeachBreak.Client.Models
@using ti8m.BeachBreak.Client.Components.Shared
@inherits OptimizedTranslatableComponentBase

<div class="feedback-info">
    <header class="feedback-header">
        <RadzenIcon Icon="feedback" Class="feedback-icon" />
        <h3 class="feedback-title">@T("question-types.employee-feedback")</h3>
    </header>

    <main class="feedback-content">
        <p class="feedback-description">
            @T("messages.feedback-question-no-config-required")
        </p>

        <div class="feedback-workflow-info">
            <h4 class="workflow-title">@T("feedback.dynamic-management-title")</h4>
            <p class="workflow-description">
                @T("messages.feedback-question-workflow-explanation")
            </p>
            <ul class="workflow-steps">
                <li>@T("messages.feedback-linked-during-initialization")</li>
                <li>@T("feedback.workflow-step-templates")</li>
                <li>@T("feedback.workflow-step-instances")</li>
            </ul>
        </div>
    </main>
</div>

@code {
    [Parameter, EditorRequired] public QuestionSection Section { get; set; } = default!;
}

<style>
    .feedback-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem;
        text-align: center;
    }

    .feedback-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .feedback-icon {
        font-size: 3rem;
        color: var(--rz-info);
        margin-bottom: 0.75rem;
    }

    .feedback-title {
        margin: 0;
        font-weight: var(--font-weight-heading);
        color: var(--rz-text-color);
        font-size: 1.125rem;
    }

    .feedback-content {
        max-width: 400px;
    }

    .feedback-description {
        color: var(--rz-text-muted);
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
    }

    .feedback-workflow-info {
        padding: 1rem;
        background: var(--rz-info-lighter);
        border: 1px solid var(--rz-info-light);
        border-radius: 0.375rem;
        text-align: left;
    }

    .workflow-title {
        margin: 0 0 0.5rem 0;
        font-size: 0.8125rem;
        font-weight: var(--font-weight-emphasis);
        color: var(--rz-text-color);
    }

    .workflow-description {
        margin: 0 0 0.75rem 0;
        font-size: 0.8125rem;
        color: var(--rz-text-color);
    }

    .workflow-steps {
        margin: 0;
        padding-left: 1.25rem;
        font-size: 0.75rem;
        color: var(--rz-text-color);
        line-height: 1.4;
    }

    .workflow-steps li {
        margin-bottom: 0.25rem;
    }

    .workflow-steps li:last-child {
        margin-bottom: 0;
    }
</style>
