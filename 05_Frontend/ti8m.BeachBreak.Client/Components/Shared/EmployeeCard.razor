@using Radzen
@using Radzen.Blazor
@using ti8m.BeachBreak.Client.Services

<link href="css/assignment-dialogs.css" rel="stylesheet" />

<div class="employee-card-flat @(IsSelected ? "selected" : "") @(IsCurrent ? "current" : "")"
     @onclick="@HandleClick"
     data-employee-id="@Employee.Id"
     title="@($"{Employee.FullName} - {Employee.EMail}")">

    <span class="employee-avatar">@GetEmployeeInitials()</span>
    <div class="employee-info">
        <span class="employee-name">@Employee.FullName</span>
        <span class="employee-email">@Employee.EMail</span>
        <span class="employee-dept">@Employee.Department • @Employee.Role</span>
        @if (IsCurrent)
        {
            <span class="current-assignee">★ Current Assignee</span>
        }
    </div>
    <span class="selection-status @(IsSelected ? "selected" : "")" aria-label="@(IsSelected ? "Selected" : "Not selected")">
        @(IsSelected ? "✓" : "")
    </span>
</div>

@code {
    [Parameter] public EmployeeDto Employee { get; set; } = default!;
    [Parameter] public bool IsSelected { get; set; } = false;
    [Parameter] public bool IsCurrent { get; set; } = false;
    [Parameter] public EventCallback<EmployeeDto> OnClick { get; set; }
    [Parameter] public bool ShowCurrentAssigneeLabel { get; set; } = true;

    private string GetEmployeeInitials()
    {
        var names = Employee.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
        {
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        }
        return names.Length > 0 ? names[0][0].ToString().ToUpper() : "?";
    }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync(Employee);
    }
}