@*
    ImmersivePageLayout.razor
    Layout component for questionnaires and forms requiring focused, distraction-free experience.
    Uses full-width design with semantic HTML structure.
*@

<div class="immersive-page">
    @if (HeaderContent != null || !string.IsNullOrEmpty(Title))
    {
        <header class="immersive-page-header">
            @if (HeaderContent != null)
            {
                @HeaderContent
            }
            else if (!string.IsNullOrEmpty(Title))
            {
                <div class="page-header d-flex justify-content-between align-items-start">
                    <div>
                        <RadzenText TextStyle="TextStyle.H3" Class="text-primary rz-mb-1">
                            @Title
                        </RadzenText>
                        @if (!string.IsNullOrEmpty(Description))
                        {
                            <RadzenText TextStyle="TextStyle.Subtitle1" Class="text-muted">
                                @Description
                            </RadzenText>
                        }
                    </div>
                    @if (HeaderActions != null)
                    {
                        <div class="d-flex align-items-center gap-3">
                            @HeaderActions
                        </div>
                    }
                </div>
            }
        </header>
    }

    <main class="immersive-page-content">
        @ChildContent
    </main>

    @if (FooterContent != null || ShowDefaultFooter)
    {
        <footer class="immersive-page-footer">
            @if (FooterContent != null)
            {
                @FooterContent
            }
            else if (ShowDefaultFooter)
            {
                <div class="navigation-footer d-flex justify-content-between">
                    @DefaultFooterContent
                </div>
            }
        </footer>
    }
</div>

@code {
    /// <summary>
    /// Main content of the page
    /// </summary>
    [Parameter] public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Custom header content. If provided, overrides Title/Description
    /// </summary>
    [Parameter] public RenderFragment? HeaderContent { get; set; }

    /// <summary>
    /// Custom footer content. If provided, overrides default footer
    /// </summary>
    [Parameter] public RenderFragment? FooterContent { get; set; }

    /// <summary>
    /// Default footer content when ShowDefaultFooter is true
    /// </summary>
    [Parameter] public RenderFragment? DefaultFooterContent { get; set; }

    /// <summary>
    /// Header actions (buttons, etc.) shown on the right side of header
    /// </summary>
    [Parameter] public RenderFragment? HeaderActions { get; set; }

    /// <summary>
    /// Page title - used when HeaderContent is not provided
    /// </summary>
    [Parameter] public string? Title { get; set; }

    /// <summary>
    /// Page description/subtitle - used when HeaderContent is not provided
    /// </summary>
    [Parameter] public string? Description { get; set; }

    /// <summary>
    /// Whether to show the default navigation footer
    /// </summary>
    [Parameter] public bool ShowDefaultFooter { get; set; } = false;

    /// <summary>
    /// Additional CSS classes to apply to the outer container
    /// </summary>
    [Parameter] public string? CssClass { get; set; }

    /// <summary>
    /// Additional attributes to apply to the outer container
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetContainerClasses()
    {
        var classes = "immersive-page";
        if (!string.IsNullOrEmpty(CssClass))
        {
            classes += $" {CssClass}";
        }
        return classes;
    }
}