@*
    PageLayout.razor
    Unified layout component providing consistent visual experience across all pages.
    Supports metrics, footer content, and header actions while maintaining visual uniformity.
*@
@using Radzen
@using Radzen.Blazor

<RadzenStack Gap="0" Class="@GetContainerClass()" style="@ContainerStyle">
    <RadzenRow Gap="0">
        <RadzenColumn Size="12">
            @if (HeaderContent != null || !string.IsNullOrEmpty(Title))
            {
                <header class="page-layout-header">
                    @if (HeaderContent != null)
                    {
                        @HeaderContent
                    }
                    else
                    {
                        <RadzenStack Orientation="Orientation.Horizontal"
                                   JustifyContent="JustifyContent.SpaceBetween"
                                   AlignItems="AlignItems.Center"
                                   Wrap="FlexWrap.Wrap"
                                   Gap="1rem">
                            <div>
                                @if (!string.IsNullOrEmpty(Title))
                                {
                                    <RadzenText TextStyle="TextStyle.H3" Class="page-layout-title rz-mb-1">
                                        @Title
                                    </RadzenText>
                                }
                                @if (!string.IsNullOrEmpty(Description))
                                {
                                    <RadzenText TextStyle="TextStyle.Subtitle1" Class="page-layout-description">
                                        @Description
                                    </RadzenText>
                                }
                            </div>
                            @if (HeaderActions != null)
                            {
                                <div class="d-flex align-items-center gap-3">
                                    @HeaderActions
                                </div>
                            }
                        </RadzenStack>
                    }
                </header>
            }

            <main class="page-layout-content">
                @if (UseMetricsRow && MetricsContent != null)
                {
                    <RadzenRow Gap="1rem" Class="rz-mb-4">
                        @MetricsContent
                    </RadzenRow>
                }
                @ChildContent
            </main>

            @if (FooterContent != null || ShowDefaultFooter)
            {
                <footer class="page-layout-footer">
                    @if (FooterContent != null)
                    {
                        @FooterContent
                    }
                    else if (ShowDefaultFooter)
                    {
                        <div class="navigation-footer d-flex justify-content-between">
                            @DefaultFooterContent
                        </div>
                    }
                </footer>
            }
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@code {
    /// <summary>
    /// Main content of the page
    /// </summary>
    [Parameter] public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Custom header content. If provided, overrides Title/Description
    /// </summary>
    [Parameter] public RenderFragment? HeaderContent { get; set; }

    /// <summary>
    /// Header actions (buttons, filters, etc.) shown on the right side of header
    /// </summary>
    [Parameter] public RenderFragment? HeaderActions { get; set; }

    /// <summary>
    /// Page title - used when HeaderContent is not provided
    /// </summary>
    [Parameter] public string? Title { get; set; }

    /// <summary>
    /// Page description/subtitle - used when HeaderContent is not provided
    /// </summary>
    [Parameter] public string? Description { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the outer container
    /// </summary>
    [Parameter] public string? CssClass { get; set; }

    /// <summary>
    /// Additional inline styles to apply to the outer container
    /// </summary>
    [Parameter] public string? ContainerStyle { get; set; }

    /// <summary>
    /// Whether to add container padding (default: true)
    /// Set to false if you want to manage padding in your content
    /// </summary>
    [Parameter] public bool UseContainerPadding { get; set; } = true;

    /// <summary>
    /// Additional attributes to apply to the outer container
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    /// <summary>
    /// Custom footer content
    /// </summary>
    [Parameter] public RenderFragment? FooterContent { get; set; }

    /// <summary>
    /// Whether to show the default navigation footer
    /// </summary>
    [Parameter] public bool ShowDefaultFooter { get; set; } = false;

    /// <summary>
    /// Default footer content when ShowDefaultFooter is true
    /// </summary>
    [Parameter] public RenderFragment? DefaultFooterContent { get; set; }

    /// <summary>
    /// Metrics content for dashboard-style pages
    /// </summary>
    [Parameter] public RenderFragment? MetricsContent { get; set; }

    /// <summary>
    /// Whether to use metrics row for dashboard-style display
    /// </summary>
    [Parameter] public bool UseMetricsRow { get; set; } = false;

    private string GetContainerClass()
    {
        var classes = "page-layout";

        if (UseContainerPadding)
        {
            classes += " rz-p-4";
        }

        if (!string.IsNullOrEmpty(CssClass))
        {
            classes += $" {CssClass}";
        }

        return classes;
    }
}