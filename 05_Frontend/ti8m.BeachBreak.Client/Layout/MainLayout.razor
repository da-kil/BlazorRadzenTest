@inherits LayoutComponentBase
@using ti8m.BeachBreak.Client.Components.Shared

<RadzenComponents @rendermode="InteractiveAuto" />

<HeadContent>
    <link href="css/main.css" rel="stylesheet" />
    <link href="css/page-layouts.css" rel="stylesheet" />
</HeadContent>

<div class="page">
    <header class="app-header">
        <div class="header-content">
            <div class="brand-section">
                <h1 class="brand-title">ti8m BeachBreak</h1>
                <span class="brand-subtitle">Performance Management Platform</span>
            </div>
            <div class="header-actions">
                <ThemeChooser />
                <button class="btn-icon notification-btn" title="Notifications">
                    <span class="notification-icon">🔔</span>
                </button>
                <LoginDisplay />
            </div>
        </div>
    </header>

    <div class="app-body">
        <aside class="sidebar">
            <NavMenu />
        </aside>

        <main class="main-content">
            <div class="content-wrapper">
                @Body
            </div>
        </main>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="error-content">
        <span class="error-icon">⚠️</span>
        <div class="error-text">
            <strong>An error occurred</strong>
            <p>Something went wrong. Please try refreshing the page.</p>
        </div>
        <div class="error-actions">
            <a href="." class="btn btn-primary reload">Reload</a>
            <button class="btn-text dismiss">Dismiss</button>
        </div>
    </div>
</div>
